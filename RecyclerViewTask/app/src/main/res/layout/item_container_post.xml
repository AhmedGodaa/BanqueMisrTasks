<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/post_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/postMarginTop"
        android:background="@drawable/background_login"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageUser"
        android:layout_width="@dimen/roundedImageViewDimen"
        android:layout_height="@dimen/roundedImageViewDimen"
        android:layout_alignEnd="@+id/post_background"
        android:layout_alignBottom="@+id/post_background"
        android:layout_marginEnd="279dp"
        android:layout_marginBottom="439dp"

        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:srcCompat="@drawable/button_shape" />


    <ImageView
        android:id="@+id/imagePost"
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_alignTop="@+id/post_background"
        android:layout_alignEnd="@+id/post_background"
        android:layout_alignBottom="@+id/post_background"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_shape"
        android:scaleType="centerCrop" />

</RelativeLayout>